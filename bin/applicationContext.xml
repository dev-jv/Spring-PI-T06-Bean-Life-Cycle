<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

<context:property-placeholder location="classpath:datosEmpresa.propiedades"/> <!-- Cargar el archivo -->

<bean name="miInforme"  class="es.pildoras.IoC.Informe" ></bean> <!-- Enlace DI -->


<bean id="cDirector" class="es.pildoras.IoC.DirectorEmpleado"> <!-- bean para una DI con un const.r -->
	<constructor-arg ref="miInforme"></constructor-arg>
	<property name="email" value="${email}"></property> <!-- ..para los campos -->
	<property name="nombreEmpresa" value="${nombreEmpresa}"></property>
</bean>

<bean id="cJefe" class="es.pildoras.IoC.JefeEmpleado"> 
	<constructor-arg ref="miInforme"></constructor-arg>
</bean>

<bean id="sSecretario" class="es.pildoras.IoC.SecretarioEmpleado"> <!-- bean para una DI con un sett.r -->
	<property name="informeNuevo" ref="miInforme"></property>
	<property name="email" value="secretaria@pildorasinformaticas.es"></property> <!-- ..para los campos -->
	<property name="nombreEmpresa" value="Píldoras Informáticas"></property>
</bean>







</beans>




